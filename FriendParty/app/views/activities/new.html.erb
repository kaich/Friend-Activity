<%= form_for @activity ,url: group_activities_path do |f| %>
  <%= @activity.errors.messages %>
  
  <div class="form-group">
    <%= f.label :name, 'name' %>
    <%= f.text_field :name ,class:"form-control"%> 
  </div>

  <%#create preview toolbar%>
  <div class="form-group">
    <div class="editor-toolbar col-sm-offset-2 col-sm-10">
      <ul class="nav nav-pills">
        <li class="edit active"><%= link_to('edit', "#") %></li>
        <li class="preview"><%= link_to('preview', "#") %></li>
      </ul>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :content, 'content' %>
    <%= f.text_area :content, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :startime, 'starttime' %>
    <%= f.text_field :start_time,class:"form-control datepicker"%> 
  </div>
  <div class="form-group">
    <%= f.label :endtime, 'endtime' %>
    <%= f.text_field :end_time,class:"form-control datepicker"%> 
  </div>

  <%= f.submit 'Submit', :disable_with => 'Submiting...', class:"btn btn-primary"%>
<% end %>
