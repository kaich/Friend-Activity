<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
     <%= @group.name %> 
    </div>
  </div>
  <div class="panel-body">
    <div class="likeable btn btn-primary" id="likeable" data-type=<%=controller_name%> data-id=<%=@group.like.id%> data-method=<%= @group.like.liked_by_user?(current_user) ? "delete" :"post"  %>>
     <%= like_icon_class(@group.like) %>
   </div>
   <%= @group.intro %>
  </div>
  <div class="panel-footer">
    <%= @group.created_at %>
  </div>
</div>

<%= render @group.applications %>

<% if !user_in_group? @group %>
  <%= render 'applications/form' %>
<% end %>

<table class="members" summary="Group members">
  <%= render @users %>
</table>
<%= will_paginate @users %>
