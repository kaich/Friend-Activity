<!-- Portfolio Grid Section -->
<section id="portfolio" class="bg-light-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading"> <%= t :favorite %></h2>
                <h3 class="section-subheading text-muted"> <%= t :favorite_descript %></h3>
            </div>
        </div>
        <div class="row">
          <% if current_user.favorites.count > 0 %>
            <% for favorite in current_user.favorites %>
              <%= render  favorite %> 
            <% end %>
          <% else %>
              <%= render "favorites/favorite_empty" %> 
          <% end %>
        </div>
    </div>
</section>
